mixin content-thumbnails(products)
	ul.thumbnails__list.clearfix
		-var counter=0;
		-for (var ind in products)
			-counter++;
			li.thumbnails__item
				.thumbnails__item__wrapper
					.slideshow-block
						.slideshow__main
							img.slideshow__main__picture(src=products[ind].imgPath.img1 alt="slideshow_pic1")
						ul.slideshow__list.clearfix
							li.slideshow__item.clearfix.active
								a.slideshow__item__link(href="#")
									img.slideshow__item__pic(src=products[ind].imgPath.img1 alt="slideshow_pic1")
							li.slideshow__item.clearfix
								a.slideshow__item__link(href="#")
									img.slideshow__item__pic(src=products[ind].imgPath.img2 alt="slideshow_pic2")
							li.slideshow__item.clearfix
								a.slideshow__item__link(href="#")
									img.slideshow__item__pic(src=products[ind].imgPath.img3 alt="slideshow_pic3")
					h2.model-name= products[ind].modelName
					ul.params__list.clearfix
						-for (var param in products[ind].parameters)
							li.params__item.clearfix
								div(class="param-name")= param
								div(class="param-value")= products[ind].parameters[param]
					div(class="rating" data-rating="4")
					.price= products[ind].price
						span.rouble-sign г
					.availability-state
						.availability-state__available
							span.availability-state__text В наличии
					form.to-basket__form(method="post" action="#" id="to-basket__form_"+counter name="to-basket__form_"+counter)
						input.to-basket-button(type="button" name="to-basket-button_" id="to-basket-button_"+ counter value="В корзину")




